<div class="newBusinessForm">
  <div class="input-group mb-3">
    <input type="text" class="form-control" id="title" placeholder="Business Name" aria-label="Business Name">
  </div>
  <div class="input-group mb-3">
    <input type="text" class="form-control" id="description" placeholder="First Name" aria-label="First Name">
  </div>
  <div class="input-group mb-3">
    <input type="text" class="form-control" id="inputZipCode" placeholder="Zip Code" aria-label="zip code">
  </div>
  <div class="input-group mb-3">
    <input type="text" class="form-control" id="inputPhoneNumber" placeholder="Business Phone Number" aria-label="Phone Number">
  </div>
  <div class="input-group">
    <div class="input-group-prepend">
      <span class="input-group-text">Tell us about your business</span>
    </div>
    <textarea id="info" class="form-control" aria-label="Details textarea"></textarea>
  </div>
  <button type="submit" id="contactInfo" class="btn btn-info">Add Business</button>
</div>
