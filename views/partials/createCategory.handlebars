{{!-- category prompt question --}}
<br>
<h4 id="creationTitle">Add a new Category: </h4>
{{!-- Create Category Input --}}
<div class="newBusinessForm starRating vert-line">
  <form id="categoryForm">
    <div class="">
      <label for="categoryName">Write new category name: </label>
      </br>
      <input type="text" id="categoryName" class="form-control" placeholder="Category to create">
    </div>
    <div class="">
      <br>
      <button id="submitCategory" type="submit" class="btn btn-info">Create Category</button>
    </div>
  </form>
</div>
{{!-- Successful Toast --}}
<div class="toast catSuccessful" role="alert" aria-live="assertive" id="catCreated" aria-atomic="true">
  <div class="toast-header">
    <img src="https://www.benevablack.com/wp-content/uploads/2018/12/check-mark-green-tick-mark.png" style="width: 20px; height: 20px" class="rounded mr-2" alt="...">
    <strong class="mr-auto">Success!</strong>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">
    Category created successfully!
  </div>
</div>
{{!-- Unsuccessful Toast --}}
<div class="toast catUnSuccessful" role="alert" aria-live="assertive" id="catNotCreated" aria-atomic="true">
  <div class="toast-header">
    <img src="https://www.botlibre.biz/media/a532564-0.png" style="width: 20px; height: 20px" class="rounded mr-2" alt="...">
    <strong class="mr-auto">Fail!</strong>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">
    Uh oh! Please try again.
  </div>
</div>



